<%- include("partials/header")%>


<%- include("partials/nav")%>

<h1 class="m-3">Register book</h1>

<form action="/register" method="POST">
    <input type="text" placeholder="Author" name="author" class="form-control w-25 m-3">

    <!-- <input type="text" placeholder="country" name="country" class="form-control w-25 m-3"> -->
    <select name="country" class="form-control w-25 m-3">
        <option value="">Select country</option>
       <% countryNames.forEach(function(c){ %>

        <option value="<%= c%>"><%= c%></option>

      <% }) %>

    </select>

    <input type="url" name="image" placeholder="Image-url" class="form-control w-25 m-3">

    <!-- <input type="text" placeholder="language" name="language" class="form-control w-25 m-3"> -->
    <select name="language" class="form-control w-25 m-3">
        <option value="">Select language</option>
        <% languageNames.forEach(function(l){ %>
            <option value="<%= l.name%>"><%= l.name%></option>
       <% }) %>
    </select>

    <input type="url" name="link" placeholder="Link" class="form-control w-25 m-3">

    <input type="number" name="pages" placeholder="Pages" class="form-control w-25 m-3">
    
    <input type="text" name="title" placeholder="Title" class="form-control w-25 m-3">

    <input type="number" name="year" placeholder="Year" class="form-control w-25 m-3">

    <button class="btn btn-success ms-3 mb-3 px-5">Register</button>

    <!-- <button class="btn btn-dark px-5 ms-3 mb-3">Show</button> -->


</form>


<%- include("partials/footer")%>