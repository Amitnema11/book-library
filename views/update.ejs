<%- include("partials/header")%>


<%- include("partials/nav")%>

<h1 class="m-3">Update your book</h1>

<form action="/update/<%= index%>" method="POST">
    <input type="text" placeholder="author" name="author" value="<%= book.author %>" class="form-control w-25 m-3">

    
    <select name="country" class="form-control w-25 m-3">
        <option value="">Select country</option>
       <% countryNames.forEach(function(c){ %>

        <option 
        <%= book.country===c ? "selected": "" %>
        value="<%= c%>"><%= c%></option>

      <% }) %>

    </select>

    <input type="url" name="image" placeholder="image-url" class="form-control w-25 m-3" value="<%= book.image%>">

    
    <select name="language" class="form-control w-25 m-3">
        <option value="">Select language</option>
        <% languageNames.forEach(function(l){ %>
            <option 
            <%= book.language===l.name ? "selected":"" %>
            value="<%= l.name%>"><%= l.name%></option>
       <% }) %>
    </select>

    <input type="url" name="link" placeholder="link" class="form-control w-25 m-3" value="<%= book.link%>">

    <input type="number" name="pages" placeholder="pages" class="form-control w-25 m-3" value="<%= book.pages%>">
    
    <input type="text" name="title" placeholder="title" class="form-control w-25 m-3" value="<%= book.title%>">

    <input type="number" name="year" placeholder="year" class="form-control w-25 m-3"  value="<%= book.year%>">

    <button class="btn btn-success ms-3 px-5">Update book</button>



</form>


<%- include("partials/footer")%>